{
  "cipherSuiteStandards": {
    "version": "1.0",
    "lastUpdated": "2025-01-05",
    "description": "Cipher suite security configuration standards for CloudFront and HTTPS endpoints",
    
    "strongCipherSuites": {
      "description": "Recommended strong cipher suites that should be supported",
      "required": [
        "ECDHE-RSA-AES256-GCM-SHA384",
        "ECDHE-RSA-AES128-GCM-SHA256",
        "ECDHE-ECDSA-AES256-GCM-SHA384",
        "ECDHE-ECDSA-AES128-GCM-SHA256"
      ],
      "recommended": [
        "ECDHE-RSA-CHACHA20-POLY1305",
        "ECDHE-ECDSA-CHACHA20-POLY1305",
        "DHE-RSA-AES256-GCM-SHA384",
        "DHE-RSA-AES128-GCM-SHA256"
      ],
      "acceptable": [
        "ECDHE-RSA-AES256-SHA384",
        "ECDHE-RSA-AES128-SHA256",
        "ECDHE-ECDSA-AES256-SHA384",
        "ECDHE-ECDSA-AES128-SHA256"
      ]
    },
    
    "weakCipherSuites": {
      "description": "Cipher suites and algorithms that should be disabled",
      "prohibited": [
        "RC4",
        "DES",
        "3DES",
        "IDEA",
        "SEED"
      ],
      "weakHashes": [
        "MD5",
        "SHA1"
      ],
      "weakKeyExchange": [
        "NULL",
        "EXPORT",
        "ADH",
        "AECDH",
        "PSK",
        "SRP",
        "KRB5"
      ],
      "patterns": [
        ".*-NULL-.*",
        ".*-EXPORT-.*",
        ".*-RC4-.*",
        ".*-DES-.*",
        ".*-3DES-.*",
        ".*-MD5$",
        ".*-SHA$"
      ]
    },
    
    "encryptionStrength": {
      "description": "Minimum encryption strength requirements",
      "symmetric": {
        "minimum": 128,
        "recommended": 256,
        "algorithms": {
          "AES": {
            "128": "acceptable",
            "256": "recommended"
          },
          "ChaCha20": {
            "256": "recommended"
          }
        }
      },
      "asymmetric": {
        "minimum": 2048,
        "recommended": 3072,
        "algorithms": {
          "RSA": {
            "2048": "acceptable",
            "3072": "recommended",
            "4096": "excellent"
          },
          "ECDSA": {
            "256": "recommended",
            "384": "excellent"
          }
        }
      }
    },
    
    "keyExchange": {
      "description": "Key exchange algorithm requirements",
      "perfectForwardSecrecy": {
        "required": true,
        "algorithms": [
          "ECDHE",
          "DHE"
        ]
      },
      "ellipticCurves": {
        "recommended": [
          "P-256",
          "P-384",
          "P-521",
          "X25519"
        ],
        "acceptable": [
          "secp256r1",
          "secp384r1",
          "secp521r1"
        ]
      }
    },
    
    "messageAuthentication": {
      "description": "Message authentication code requirements",
      "aead": {
        "preferred": true,
        "algorithms": [
          "GCM",
          "POLY1305",
          "CCM"
        ]
      },
      "hmac": {
        "acceptable": [
          "SHA256",
          "SHA384",
          "SHA512"
        ],
        "deprecated": [
          "SHA1",
          "MD5"
        ]
      }
    },
    
    "protocolVersions": {
      "description": "Supported TLS protocol versions",
      "supported": [
        "TLSv1.2",
        "TLSv1.3"
      ],
      "deprecated": [
        "SSLv2",
        "SSLv3",
        "TLSv1.0",
        "TLSv1.1"
      ]
    },
    
    "cloudFrontSpecific": {
      "description": "CloudFront-specific cipher suite considerations",
      "securityPolicy": {
        "recommended": "TLSv1.2_2021",
        "minimum": "TLSv1.2_2019",
        "legacy": "TLSv1.2_2017"
      },
      "viewerProtocolPolicy": "redirect-to-https",
      "originProtocolPolicy": "https-only",
      "customHeaders": {
        "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      }
    },
    
    "validationCriteria": {
      "description": "Criteria for cipher suite validation scoring",
      "scoring": {
        "strongCipherSupport": {
          "weight": 40,
          "description": "Points for supporting strong cipher suites"
        },
        "noWeakCiphers": {
          "weight": 30,
          "description": "Points for not supporting weak ciphers"
        },
        "encryptionStrength": {
          "weight": 20,
          "description": "Points for strong encryption algorithms"
        },
        "cipherDiversity": {
          "weight": 10,
          "description": "Points for cipher suite diversity"
        }
      },
      "thresholds": {
        "excellent": 95,
        "good": 85,
        "acceptable": 75,
        "poor": 60,
        "failing": 0
      },
      "minimumPassingScore": 80
    },
    
    "testingGuidelines": {
      "description": "Guidelines for cipher suite testing",
      "testDomains": [
        "github.com",
        "aws.amazon.com",
        "cloudfront.net"
      ],
      "testScenarios": [
        "Strong cipher negotiation",
        "Weak cipher rejection",
        "Perfect forward secrecy",
        "Cipher ordering preference",
        "Protocol version support"
      ],
      "automatedTesting": {
        "frequency": "weekly",
        "alertThreshold": 80,
        "reportGeneration": true
      }
    }
  }
}