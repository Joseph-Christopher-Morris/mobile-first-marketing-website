{
  "tlsValidation": {
    "requiredVersions": ["TLS 1.2", "TLS 1.3"],
    "prohibitedVersions": ["SSL 2.0", "SSL 3.0", "TLS 1.0", "TLS 1.1"],
    "minimumSecurityLevel": "MEDIUM",
    "requirePFS": true,
    "strongEncryptionRequired": true
  },
  "cipherSuites": {
    "recommended": [
      "ECDHE-RSA-AES256-GCM-SHA384",
      "ECDHE-RSA-AES128-GCM-SHA256",
      "ECDHE-RSA-AES256-SHA384",
      "ECDHE-RSA-AES128-SHA256",
      "ECDHE-RSA-CHACHA20-POLY1305"
    ],
    "acceptable": [
      "AES256-GCM-SHA384",
      "AES128-GCM-SHA256",
      "AES256-SHA256",
      "AES128-SHA256"
    ],
    "prohibited": [
      "RC4",
      "DES",
      "3DES",
      "MD5",
      "SHA1-only"
    ]
  },
  "securityHeaders": {
    "strictTransportSecurity": {
      "required": true,
      "minAge": 31536000,
      "includeSubDomains": true,
      "preload": true
    },
    "contentSecurityPolicy": {
      "required": true,
      "directives": [
        "default-src 'self'",
        "script-src 'self' 'unsafe-inline'",
        "style-src 'self' 'unsafe-inline'",
        "img-src 'self' data: https:",
        "font-src 'self'",
        "connect-src 'self'",
        "frame-ancestors 'none'"
      ]
    }
  },
  "cloudfront": {
    "securityPolicy": "TLSv1.2_2021",
    "minimumProtocolVersion": "TLSv1.2_2021",
    "sslSupportMethod": "sni-only",
    "certificateSource": "acm"
  },
  "validation": {
    "timeout": 10000,
    "retries": 3,
    "endpoints": [
      "https://www.ssllabs.com/ssltest/",
      "https://testssl.sh/"
    ]
  },
  "compliance": {
    "standards": ["PCI DSS", "NIST", "OWASP"],
    "requirements": {
      "pciDss": {
        "tlsVersion": "1.2+",
        "strongCryptography": true,
        "regularTesting": true
      },
      "nist": {
        "approvedAlgorithms": true,
        "keyManagement": true,
        "certificateValidation": true
      },
      "owasp": {
        "secureDefaults": true,
        "regularUpdates": true,
        "vulnerabilityTesting": true
      }
    }
  }
}