{
  "environments": {
    "development": {
      "bucketName": "mobile-marketing-site-dev",
      "region": "us-east-1",
      "description": "Development environment S3 bucket"
    },
    "staging": {
      "bucketName": "mobile-marketing-site-staging",
      "region": "us-east-1",
      "description": "Staging environment S3 bucket"
    },
    "production": {
      "bucketName": "mobile-marketing-site-prod",
      "region": "us-east-1",
      "description": "Production environment S3 bucket"
    }
  },
  "security": {
    "blockPublicAccess": true,
    "enableVersioning": true,
    "encryptionAlgorithm": "AES256",
    "bucketKeyEnabled": true
  },
  "policies": {
    "restrictToCloudFrontOnly": true,
    "denyDirectPublicAccess": true
  },
  "tags": {
    "Project": "MobileMarketingSite",
    "Environment": "{{environment}}",
    "Purpose": "StaticWebsiteHosting",
    "ManagedBy": "Infrastructure-Script"
  }
}
