{
  "root": true,
  "extends": ["next", "next/core-web-vitals", "plugin:@typescript-eslint/recommended", "prettier"],
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "react/no-unescaped-entities": "off",
    "@next/next/no-img-element": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["src/app/**", "src/pages/**", "src/components/**/*.tsx"],
      "excludedFiles": ["src/components/test-image-error-handling/**", "src/components/**/__tests__/**"],
      "rules": {
        "@next/next/no-img-element": "error"
      }
    },
    {
      "files": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"],
      "env": { "jest": true, "node": true },
      "rules": {
        "@next/next/no-img-element": "off",
        "jsx-a11y/alt-text": "off",
        "react/no-unescaped-entities": "off"
      }
    },
    { 
      "files": ["scripts/**", "*.config.*", "**/*.config.*"], 
      "env": { "node": true } 
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "public/",
    "coverage/",
    "test-results/",
    "validation-reports/",
    "dist/"
  ]
}
